<h4> All Courses </h4>

<ul>
  <% @courses.each do |course| %>
    <li>
      <%= link_to course.title, course_path(course) %>
      by <%= link_to course.user.name, user_path(course.user) %>
      <p>
        <%= course.description %>
      </p>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new course", new_course_path, class: 'button' %>
