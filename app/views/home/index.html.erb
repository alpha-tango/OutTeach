<div id='title', class='row'>
  <h1 id='outteach'><span class='subheader'>OUTTEACH</h1>
  <h1>SHARE YOUR KNOWLEDGE</h1>

<div id='about', class='body row'>
  <div class='large-3 columns'>
  <h3>RECENTLY<br>ADDED<br>COURSES</h3>
  </div>
  <div class='large-9 columns'>
      <% @courses.each do |course| %>
        <h4><%= course.title %></h4> by <%= course.user.name %><br>
      <% end %><br>

    <% if user_signed_in? %>
      <%= link_to "VIEW ALL COURSES", courses_path, class: 'button' %>
    <% else %>
      <h4>
        <%= link_to "Log in", new_user_session_path %> or
        <%= link_to "Sign up", new_user_registration_path %>
        to view more courses or add your own
      </h4>
    <% end %>
  </div>
</div>

